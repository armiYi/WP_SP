<!-- 多图列表 -->
<view class="multi" wx:elif="{{ type ? type === 4 : articleStyle === 4 }}">
  <block wx:key="id" wx:for="{{ list }}">
    <!-- 广告 -->
    <view
      class="multi-ad"
      index="{{index}}"
      wx:if="{{index%item.listAdEvery == 0  && index!=0 && item.listAd =='1' && showAd}}"
    >
      <block wx:if="{{(index/item.listAdEvery)%2==0}}">
