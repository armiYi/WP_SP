      index="{{index}}"
      id="{{item.id}}"
      data-posttype="{{item.postType}}"
      data-format="{{item.format}}"
      data-channelsfeedid="{{item.channelsFeedId}}"
      data-channelsid="{{item.channelsId}}"
      data-mppostlink="{{item.mpPostLink}}"
